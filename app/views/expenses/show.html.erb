<h1 class="text-center m-3">Individual Expense</h1>
<h3 class="text-center m-1"> <%= link_to 'Back to Expenses', expenses_path, :class => "btn btn-primary" %> </h3>
<div class="container mt-3 card shadow p-3 mb-5 bg-white rounded" style="min-width: 300px; max-width: 50vw"> 
  <div class="card-body">
    <h1 class="text-center"> <%= @expense.item %> - <%= @expense.price %> </h1>
    <h3 class="text-center text-muted"> <%= @expense.notes %> </h3>
    <div class="container d-flex flex-row justify-content-center align-items-center p-2">
      <%= link_to "Edit", edit_expense_path(@expense), :class => "btn btn-success m-2" %>
      <%= link_to "Delete", expense_path(@expense), method: :delete, data: {confirm: 'Delete chosen expense item PERMANENTLY?'}, :class => "btn btn-danger m-2" %>
    </div>
  </div>
 </div>
